@section askQuestion {}
@model FSW.Data.Entities.OrderSite
@{
    ViewBag.Title = "OrderSite";
    // add Resources;
} 
<link rel="stylesheet" href="~/Content/feedback_question.css" />
<link rel="stylesheet" href="/Content/other-pages-shared-styles.css">
<div class="other-site-full-body">
<div class="other-site-pad">
    <div id="w" class="other-site-form-to-fill">
        <h2 class="h1-feedback-form" id="scrool">Ваша заявка</h2>
        @using (Html.BeginForm("OrderSite", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row-feedback">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "row-label", @placeholder = "Имя" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="row-feedback">
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "row-label", @placeholder = "Фамилия" })
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
            </div>

            <div class="row-feedback">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "row-label", @placeholder = "Номер телеофна" })
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "txt", @placeholder = "Необязательно" } })
            </div>

            <div class="row-feedback">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "row-label", @placeholder = "test@example.com" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "txt" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="row-feedback">
                @Html.LabelFor(model => model.TariffPlan, htmlAttributes: new { @class = "row-label" })
                @Html.DropDownListFor(x => x.TariffPlan, Model.Tariffs, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="row-feedback">
                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "row-label" })
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "txtarea" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>

            <div class="center">
                <input type="submit" id="submitbtn" class="ok" name="submitbtn" value="Отправить" style="color:white;">
                <a href="/Home/Index">
                    <input type="button" value="На главную" class="cancel" id="submitbtn" style="color:white;" />
                </a>
            </div>
        }
    </div>
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
    }
